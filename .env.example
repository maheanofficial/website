# =========================
# Google AdSense Settings
# =========================

# Set true to enable AdSense rendering (default: true)
VITE_ADSENSE_ENABLED=true

# Your AdSense publisher id (required for live ads)
# Example: ca-pub-1234567890123456
# Used by head verification snippet and ads.txt generation during build.
VITE_ADSENSE_PUBLISHER_ID=ca-pub-XXXXXXXXXXXXXXXX

# Optional fallback slot if a placement-specific slot is missing
VITE_ADSENSE_SLOT_DEFAULT=

# Placement specific ad unit slots
VITE_ADSENSE_SLOT_HOMEPAGE_MIDDLE_AD=
VITE_ADSENSE_SLOT_STORIES_FOOTER_AD=
VITE_ADSENSE_SLOT_STORY_TOP_AD=
VITE_ADSENSE_SLOT_STORY_BOTTOM_AD=

# Show dashed placeholders in development when slots/publisher are missing
# (ignored in production)
VITE_ADSENSE_SHOW_DEV_PLACEHOLDER=true

# =========================
# cPanel Auth Settings
# =========================

# Primary admin account used by server-side users store.
PRIMARY_ADMIN_EMAIL=mahean4bd@gmail.com

# IMPORTANT: set a strong unique password before production deploy.
PRIMARY_ADMIN_PASSWORD=CHANGE_ME_NOW

# Keep localStorage-only auth fallback disabled in production.
VITE_ALLOW_LOCAL_AUTH_FALLBACK=false

# =========================
# Google OAuth (cPanel)
# =========================

# Optional frontend kill-switch. Set false only if you want to force-disable Google login.
VITE_GOOGLE_OAUTH_ENABLED=true

# Server-side OAuth credentials (set in cPanel Node.js app env).
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=

# Exact callback URL configured in Google Cloud Console.
# Example: https://www.mahean.com/admin/dashboard
GOOGLE_OAUTH_REDIRECT_URI=

# Optional safety guard. Example: https://www.mahean.com
GOOGLE_OAUTH_ALLOWED_REDIRECT_ORIGIN=
